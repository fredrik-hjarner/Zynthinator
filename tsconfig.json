{
  "compilerOptions": {
    "sourceMap": true,                    // default: false
    "noImplicitAny": false, // TODO: this is only because I import js files without types // default: false
    "module": "es6",                      // default: (target === "ES3" || target === "ES5") ? "CommonJS" : "ES6"
    "target": "ESNext",                   // default: "ES3"
    "jsx": "react",                       // default: "preserve"
    "newLine": "lf",                      // default: varies depending upon platform
    "experimentalDecorators": true,       // default: false
    "noUnusedLocals": true,               // default: false
    "noUnusedParameters": true,           // default: false
    "removeComments": true,               // default: false
    "strictNullChecks": true,             // default: false
    "moduleResolution": "node",           // default: (module === "AMD" || module === "System" || module === "ES6") ? "Classic" : "Node"
    "baseUrl": ".",                       // default: undefined
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
